<UserControl x:Class="University_WPF.Components.UserControlTwoButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControlButtons">
    <UserControl.Resources>
        <ResourceDictionary Source="..\Stylewindow.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>            
        </Grid.RowDefinitions>        
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="4">
            <Button x:Name="FirstButton" Content="{Binding TextFirstButton}" Style="{StaticResource Button_A}"/>
            <Button x:Name="LastButton" Content="{Binding TextLastButton}" Style="{StaticResource Button_A}"/>
        </StackPanel>
    </Grid>
</UserControl>
