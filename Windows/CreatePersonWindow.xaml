<Window x:Class="University_WPF.Windows.CreatePersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:University_WPF.Components"
        xmlns:local="clr-namespace:University_WPF.Windows"
        mc:Ignorable="d"
        Title="Новый студент"
        Height="500"
        Width="600"
        Background="#93deee">
    <Window.Resources>
        <ResourceDictionary Source="..\StyleWindow.xaml"/>
    </Window.Resources>
    <Grid>       
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>           
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" >
            <Label Content="Новый студент" FontSize="30" HorizontalAlignment="Center"/>            
        </StackPanel>        
        <uc:UserControlInsertData Grid.ColumnSpan="2" Grid.Row="1" TitleUC="Имя:"/>
        <uc:UserControlInsertData Grid.ColumnSpan="2" Grid.Row="2" TitleUC="Фамилия:"/>
        <uc:UserControlTwoButton Grid.ColumnSpan="2" Grid.Row="3" TextFirstButton="Создать" TextLastButton="Отмена"/>        
    </Grid>
</Window>
