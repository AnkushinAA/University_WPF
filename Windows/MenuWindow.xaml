<Window x:Class="University_WPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:University_WPF"
        mc:Ignorable="d"
        Title="Главное меню - Университет" Height="450" Width="600"        
        WindowStartupLocation="CenterScreen"
        Background="LightSkyBlue">
    <Window.Resources>
        <ResourceDictionary Source="..\StyleWindow.xaml" />
    </Window.Resources>    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Меню Студентов" Style="{StaticResource ButtonMenu}" Click="Button_Student"/>
        <Button Grid.Row="1" Content="Меню Учителей" Style="{StaticResource ButtonMenu}" Click="Button_Tiacher"/>
        <Button Grid.Row="2" Content="Меню Сотрудников" Style="{StaticResource ButtonMenu}" Click="Button_Staff"/>
        <Button Grid.Row="3" Content="Выход" Style="{StaticResource ButtonMenu}" Width="150" Click="Button_Exit"/>
    </Grid>
</Window>
